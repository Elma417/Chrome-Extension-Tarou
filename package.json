{
  "name": "chrome-extension-tarou",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.9.0",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "vite --port 1234 --open",
    "ba": "run-s clear build:alp build:prepare build:js",
    "bp": "run-s clear build:prod build:prepare build:js",
    "build:alp": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:prepare": "tsx scripts/prepare.ts",
    "build:js": "vite build --config vite.config.content.mts",
    "zip": "tsx scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@iconify/json": "^2.2.243",
    "@iconify/vue": "^4.1.2",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.270",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.3",
    "@types/uuid": "^10.0.0",
    "@types/w3c-image-capture": "^1.0.10",
    "@unocss/eslint-config": "^0.62.3",
    "@unocss/reset": "^0.62.3",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vueuse/core": "^11.0.3",
    "@vueuse/shared": "^11.0.3",
    "archiver": "^7.0.1",
    "cheerio": "^1.0.0",
    "copy-text-to-clipboard": "^3.2.0",
    "dayjs": "^1.11.13",
    "element-plus": "^2.8.1",
    "eslint": "^9.9.1",
    "fast-glob": "^3.3.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "pinia": "^2.2.2",
    "rimraf": "^6.0.1",
    "sass": "^1.78.0",
    "taze": "^0.16.7",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "unocss": "^0.62.3",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.4",
    "uuid": "^10.0.0",
    "vite": "^5.4.3",
    "vue": "^3.5.0",
    "vue-draggable-next": "^2.2.1",
    "webext-bridge": "^6.0.1"
  }
}
