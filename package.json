{
  "name": "chrome-extension-tarou",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.5",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,vue,js,html,scss",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "ba": "run-s clear build:alp build:prepare  build:js",
    "bp": "run-s clear build:prod build:prepare  build:js",
    "build:alp": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:prepare": "esno scripts/prepare.ts",
    "build:js": "vite build --config vite.config.content.mts",
    "zip": "esno scripts/zip.ts",
    "watch": "npm-watch",
    "clear": "rimraf --glob dist",
    "up": "taze major -I",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.3",
    "@iconify-json/carbon": "^1.1.31",
    "@iconify-json/game-icons": "^1.1.7",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.263",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "@unocss/eslint-config": "^0.58.6",
    "@unocss/reset": "^0.58.6",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vueuse/core": "^10.9.0",
    "@vueuse/shared": "^10.9.0",
    "archiver": "^7.0.1",
    "cheerio": "^1.0.0-rc.12",
    "copy-text-to-clipboard": "^3.2.0",
    "dayjs": "^1.11.10",
    "element-plus": "^2.6.1",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "pnpm": "^8.15.5",
    "rimraf": "^5.0.5",
    "sass": "^1.72.0",
    "taze": "^0.13.3",
    "typescript": "^5.4.3",
    "unocss": "^0.58.6",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "uuid": "^9.0.1",
    "vite": "^5.2.2",
    "vue": "^3.4.21",
    "webext-bridge": "^6.0.1"
  }
}
