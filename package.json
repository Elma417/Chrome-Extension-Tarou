    "npm-watch": "^0.11.0",
    "pinia": "^2.0.33",
    "prettier": "^2.8.5",
    "unocss": "^0.50.6",
    "unplugin-auto-import": "^0.15.1",
    "unplugin-icons": "^0.15.3",
